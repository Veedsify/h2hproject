<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>H2H Project - Tools for Easy Connection</title>
    <link rel="stylesheet" href="/css/output.css">


    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100;0,200;0,300;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">

    <!-- ICONS -->

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <!-- SWIPPER JS -->
    <link rel="stylesheet" href="/css/swiper.css">
    <!-- <script defer src="/js/swiper.bundle.js"></script> -->


    <!-- SCRIPTS -->
    <script defer src="/js/jquery.min.js"></script>
    <script type="module" defer src="/js/custom.js"></script>


    <!-- FAVICON -->
    <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon">
</head>

<body>

    <%- include('../component/header') %>

        <div class="preloader-holder duration-300 opacity-100">
            <div class="fixed min-h-screen w-full bg-white top-0 flex justify-center items-center ">
                <!-- Preloader container -->
                <div id="preloader">
                    <img src="/images/load.gif" width="90" alt="">
                </div>
            </div>
        </div>


        <section class=" h-full max-w-screen-2xl mx-auto p-2 md:px-4">

            <div class="py-28 px-2 min-h-screen">
                <div class="max-w-3xl bg-white rounded-lg mx-auto p-6 md:p-16">
                    <div class="flex justify-between items-center">
                        <h1 class="text-2xl font-medium mb-2">Hi <%= thisUser.first_name %>,
                        </h1>
                        <form action="/login/out" method="get">
                            <button class="text-blue-500">Logout</button>
                        </form>
                    </div>
                    <h1 class="text-2xl mb-8">Welcome to Your Dashboard</h1>
                    <fieldset class="border p-4">
                        <legend>
                            <h2 class="font-medium text-sm text-red-500 uppercase tracking-wide">Quote Of The Day - 
                                <span class="text-green-400"><%= author %></span>
                            </h2>
                        </legend>
                        <blockquote class="mb-6 italic text-lg text-gray-500">
                            <%= quote %>
                        </blockquote>
                    </fieldset>
                    <h3 class="text-lg my-3">Progress: <%= `${thisUser.progress}%` %>
                    </h3>
                    <div class="w-full bg-gray-200 mb-12 mx-auto rounded-lg overflow-hidden border border-gray-300">
                        <div class="bg-red-500 text-xs leading-none py-1"
                            style="width: <%= `${thisUser.progress}%` %> ">
                        </div>
                    </div>
                    <a href="/course/<%= thisUser.current_page ? thisUser.current_page : getCourse.h2h_string_id %>"
                        class="inline-block py-3 px-8 bg-red-500 text-white font-bold rounded">
                        Continue..
                    </a>

                    <% if (thisUser.progress> 0) { %>
                        <a href="/course/<%= getCourse.h2h_string_id %>"
                            class="inline-block py-3 px-8 bg-green-500 text-white font-bold rounded">
                            Start Over..
                        </a>
                        <% } %>
                </div>
            </div>

        </section>


        <%- include('../component/footer') %>

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    const preloader = document.querySelector(".preloader-holder");

                    // Simulate a delay (in milliseconds) for the preloader
                    const preloaderDelay = 1500;

                    // Auto-close the preloader after the specified delay
                    setTimeout(function () {
                        preloader.classList.add("opacity-0");
                        preloader.classList.add("hidden");
                    }, preloaderDelay);
                });
            </script>
</body>

</html>